# SSH Client Configuration for Security Hardening
# Generated by Ansible Security Hardening Playbook

# SSH client configuration template
# This template is used by OB-004 (secure_ssh.yml) #}

# Global SSH Client Settings
Host *
    # Security Settings
    Protocol 2
    HashKnownHosts yes
    GSSAPIAuthentication no
    GSSAPIDelegateCredentials no
    
    # Key Exchange and Cipher Settings
    KexAlgorithms curve25519-sha256,curve25519-sha256@libssh.org,diffie-hellman-group16-sha512,diffie-hellman-group18-sha512,diffie-hellman-group14-sha256
    Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
    MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-sha2-512,hmac-sha2-256
    
    # Connection Settings
    ServerAliveInterval 300
    ServerAliveCountMax 2
    TCPKeepAlive yes
    
    # Security Features
    ForwardAgent no
    ForwardX11 no
    ForwardX11Trusted no
    GatewayPorts no
    PermitLocalCommand no
    
    # Key Management
    AddKeysToAgent yes
    IdentitiesOnly no
    
    # Logging
    LogLevel INFO 